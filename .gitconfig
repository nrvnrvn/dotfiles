[alias]
	a = add
	au = add --update
	c = commit --gpg-sign
	co = checkout
	config-sort = "!f() { awk -F '\t' '$1 { section = $1; print section } $2 { print section \"\t\" $2}' ~/.gitconfig | sort -u | awk -F '\t' '!$2 { print $1 } $1 && $2 { print \"\t\" $2 }' > ~/.gitconfig.new && mv ~/.gitconfig.new ~/.gitconfig; }; f"
	d = diff
	fap = fetch --all --prune
	flush = reset --hard HEAD
	ph = push
	pl = pull
	st = status --short --branch
[color]
	ui = auto
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[fetch]
	prune = true
[format]
	signoff = true
[gpg]
	program = gpg
[includeIf "gitdir:~/.config/dotfiles"]
	path = ~/.gitconfig_user_all
[includeIf "gitdir:~/Projects/"]
	path = ~/.gitconfig_user_all
[includeIf "gitdir:~/Work/"]
	path = ~/.gitconfig_user_work
[merge]
	ff = only
[pull]
	default = current
	ff = only
[push]
	default = current
	followTags = true
[rebase]
	autosquash = true
[status]
	submoduleSummary = true
[transfer]
	fsckObjects = true
[user]
	name = Nick Revin

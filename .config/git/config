[alias]
	a = add
	c = commit --verbose
	co = checkout
	cob = checkout -b
	config-sort = "!f() { awk -F '\t' '$1 { section = $1; print section } $2 { print section \"\t\" $2}' ~/.config/git/config | sort -u | awk -F '\t' '!$2 { print $1 } $1 && $2 { print \"\t\" $2 }' > ~/.config/git/config.new && mv ~/.config/git/config.new ~/.config/git/config; }; f"
	d = diff
	dc = diff --cached
	ds = diff --stat
	fap = fetch --all --prune
	flush = reset --hard HEAD
	ladog = log --all --decorate --oneline --graph
	pl = pull
	pu = push
	st = status --short --branch
[color]
	ui = auto
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.config/git/ignore_global
[diff]
	tool = vimdiff
	wsErrorHighlight = all
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[format]
	signoff = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[gpg]
	format = ssh
[include]
	path = ~/.config/git/config_local
[init]
	defaultBranch = main
[merge]
	ff = only
[pull]
	default = current
	ff = only
[push]
	autoSetupRemote = true
	default = current
	followTags = true
[rebase]
	autosquash = true
[status]
	submoduleSummary = true
[tag]
	gpgsign = true
[transfer]
	fsckObjects = true
[user]
	signingkey = ~/.ssh/id_ed25519.pub

[alias]
	a = add
	c = commit
	cl = "!set -eu; f(){ local url=\"$1\"; local target=\"${url%.git}\"; target=\"${target#*://}\"; target=\"${target#*@}\"; target=\"${target//://}\"; target=\"${target%.git}\"; git clone \"${url}\" \"${target}\";}; f"
	co = checkout
	config-sort = "!set -euo pipefail; f() { awk -F '\t' '$1 { section = $1; print section } $2 { print section \"\t\" $2}' ~/.config/git/config | sort -u | awk -F '\t' '!$2 { print $1 } $1 && $2 { print \"\t\" $2 }' > ~/.config/git/config.new && mv ~/.config/git/config.new ~/.config/git/config; }; f"
	d = diff
	fap = fetch --all --prune
	flush = reset --hard HEAD
	pl = pull
	pu = push
	st = status --short --branch
[branch]
	sort = -committerdate
[color]
	ui = auto
[column]
	ui = auto
[commit]
	gpgsign = true
	verbose = true
[core]
	excludesfile = ~/.config/git/ignore_global
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	tool = vimdiff
	wsErrorHighlight = all
[fetch]
	all = true
	prune = true
	pruneTags = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[format]
	signoff = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[gpg]
	format = ssh
[include]
	path = ~/.config/git/config_local
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
	ff = only
[pull]
	default = current
	ff = only
	rebase = true
[push]
	autoSetupRemote = true
	default = current
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[status]
	submoduleSummary = true
[tag]
	gpgsign = true
	sort = version:refname
[transfer]
	fsckObjects = true
[user]
	signingkey = ~/.ssh/id_ed25519.pub
